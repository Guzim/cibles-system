    return 1+Math.round(Math.random()*20)
}

function throwDices() {
  impactX = getD20()
  impactY = getD20()
  var dim = calculateSquareDimension("target")
  coordonnees = topLeftWidthCircle(impactX, impactY,
    document.getElementById("dropdownAjustment").value,
    dim)
  drawCircle (coordonnees, "ajustement")

  coordonnees = topLeftWidthCircle(impactX, impactY, 0, dim)
  cleanFinalImpact()
  drawCircle (coordonnees, "impact")


  /* We allow to click on the target once */
  clicked = false
}

function throwDicesMobile(event) {
    throwDices()
}
</script>
